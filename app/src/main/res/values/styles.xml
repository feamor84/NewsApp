<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- content cards -->
    <!-- vertical card -->
    <style name="verticalCardLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cardVertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_half</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="cardVerticalHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/vertical_card_heading</item>
        <item name="android:textColor">@color/newsTextColor</item>
    </style>

    <style name="cardVerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_divider_height</item>
        <item name="android:background">@color/cardDivider</item>
    </style>

    <style name="cardVerticalMetaContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardVerticalMetaSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/meta_section_margin</item>
        <item name="android:padding">@dimen/meta_section_padding</item>
        <item name="android:textSize">@dimen/vertical_card_meta_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/sectionTextColor</item>
    </style>

    <style name="cardVerticalMetaDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/vertical_card_meta_text</item>
        <item name="android:textColor">@color/dateTextColor</item>
    </style>


</resources>
